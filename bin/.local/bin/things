#!/usr/bin/env bash

# helpful docs on things url scheme
# https://culturedcode.com/things/support/articles/2803573/

add_cmd="things:///add"

if [[ $1 = "add" ]]; then
    full_url=$(echo "${add_cmd}?title=${2}" | sed -e s/\ /%20/g)
    open $full_url
else
    echo "Example commands:"
    echo "- things add \"get the milk\""
fi
